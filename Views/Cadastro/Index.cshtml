        <body class="flex-container">
<main>
        <h2>Cadastro</h2>
        <form method="POST" action='@Url.Action("CadastrarCliente", "Cadastro")'>

            <div>
                <label for="e-mail">Email</label>
                <br />
                <input id="e-mail" required type="text" maxlength="30" minlength="5" name="email" />
            </div>

            <div>
                <label for="senha">Senha</label>
                <br />
                <input id="senha" required type="password" maxlength="20" minlength="3" name="senha" />
            </div>

            <div>
                <label for="cpf">CPF</label>
                <br />
                <input id="cpf" required type="text" name="cpf" />
            </div>

            <div>
                <label for="nome">Nome</label>
                <br />
                <input id="nome" required type="text" name="nome"/>
            </div>

            <div>
                <label for="Data de Nascimento">Data de Nascimento</label>
                <br />
                <input id="date" required type="date" name="data-nascimento">
            </div>

            <div>
                <label for="tel">Telefone</label>
                <br />
                <input id="tel" type="telefone" name="telefone"/>
            </div>

            <input type="submit" value="CRIAR" />
        </form>

    </main>
    </body>
    